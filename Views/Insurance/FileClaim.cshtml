@model InsuranceManagement.Web.Models.Claim
@{
    ViewData["Title"] = "File a Claim";
    var policy = ViewBag.Policy as InsuranceManagement.Web.Models.InsurancePolicy;
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        @if (policy != null)
        {
            <div class="alert alert-info mb-4">
                <strong><i class="bi bi-info-circle"></i> Filing claim against:</strong>
                @policy.PolicyNumber â€” @policy.InsuranceType
                (Coverage: $@policy.CoverageAmount.ToString("N2"))
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-clipboard-plus"></i> File a New Claim</h4>
            </div>
            <div class="card-body">
                <form asp-action="FileClaim" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="InsurancePolicyId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Describe the Incident / Claim Reason</label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Provide details about what happened and why you are filing this claim..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ClaimAmount" class="form-label fw-bold">Claim Amount ($)</label>
                            <input asp-for="ClaimAmount" type="number" step="0.01" min="0.01" class="form-control"
                                   placeholder="Amount you are claiming" />
                            <span asp-validation-for="ClaimAmount" class="text-danger small"></span>
                            @if (policy != null)
                            {
                                <div class="form-text">Max coverage: $@policy.CoverageAmount.ToString("N2")</div>
                            }
                        </div>
                        <div class="col-md-6">
                            <label asp-for="IncidentDate" class="form-label fw-bold">Date of Incident</label>
                            <input asp-for="IncidentDate" type="date" class="form-control" />
                            <span asp-validation-for="IncidentDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-send"></i> Submit Claim
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.InsurancePolicyId" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
