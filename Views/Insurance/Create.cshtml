@* This view expects a single InsurancePolicy object to bind form fields to. *@
@model InsuranceManagement.Web.Models.InsurancePolicy

<h2>Create Policy</h2>

@* Displays all validation errors in one place if form submission fails. *@
<div asp-validation-summary="All" class="text-danger"></div>

@* When submitted, this form posts to the Create action in InsuranceController. *@
<form asp-action="Create">

    <div>
        <label asp-for="PolicyNumber"></label>
        @* asp-for creates an input field bound to the PolicyNumber property. *@
        <input asp-for="PolicyNumber" />
        @* Shows validation errors specific to this field. *@
        <span asp-validation-for="PolicyNumber"></span>
    </div>

    <div>
        <label asp-for="PolicyHolderName"></label>
        <input asp-for="PolicyHolderName" />
        <span asp-validation-for="PolicyHolderName"></span>
    </div>

    <div>
        <label asp-for="InsuranceType"></label>
        <input asp-for="InsuranceType" />
        <span asp-validation-for="InsuranceType"></span>
    </div>

    <div>
        <label asp-for="CoverageAmount"></label>
        @* type="number" step="0.01" allows decimal input for currency. *@
        <input asp-for="CoverageAmount" type="number" step="0.01" />
        <span asp-validation-for="CoverageAmount"></span>
    </div>

    <div>
        <label asp-for="Premium"></label>
        <input asp-for="Premium" type="number" step="0.01" />
        <span asp-validation-for="Premium"></span>
    </div>

    <div>
        <label asp-for="StartDate"></label>
        @* type="date" shows a date picker in the browser. *@
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate"></span>
    </div>

    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate"></span>
    </div>

    <div>
        <label asp-for="PolicyStatus"></label>
        <input asp-for="PolicyStatus" />
        <span asp-validation-for="PolicyStatus"></span>
    </div>

    <button type="submit">Save</button>
</form>

<a asp-action="Index">Back</a>