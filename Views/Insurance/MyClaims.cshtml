@model IEnumerable<InsuranceManagement.Web.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-list-check"></i> My Claims</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Policies
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 text-muted">
        <i class="bi bi-clipboard-x" style="font-size: 3rem;"></i>
        <p class="mt-3">You haven't filed any claims yet.</p>
        <a asp-action="Index" class="btn btn-primary mt-2">View My Policies</a>
    </div>
}
else
{
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Claim #</th>
                <th>Policy</th>
                <th>Type</th>
                <th>Amount Claimed</th>
                <th>Incident Date</th>
                <th>Submitted</th>
                <th>Status</th>
                <th>Settled Amount</th>
                <th>Admin Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                var badge = c.Status switch {
                    InsuranceManagement.Web.Models.ClaimStatus.Submitted => "bg-secondary",
                    InsuranceManagement.Web.Models.ClaimStatus.UnderReview => "bg-warning text-dark",
                    InsuranceManagement.Web.Models.ClaimStatus.Approved => "bg-primary",
                    InsuranceManagement.Web.Models.ClaimStatus.Denied => "bg-danger",
                    InsuranceManagement.Web.Models.ClaimStatus.Settled => "bg-success",
                    _ => "bg-secondary"
                };
                <tr>
                    <td><strong>@c.ClaimNumber</strong></td>
                    <td>@c.InsurancePolicy?.PolicyNumber</td>
                    <td>@c.InsurancePolicy?.InsuranceType</td>
                    <td>$@c.ClaimAmount.ToString("N2")</td>
                    <td>@c.IncidentDate.ToString("MMM dd, yyyy")</td>
                    <td>@c.SubmittedAt.ToString("MMM dd, yyyy")</td>
                    <td><span class="badge @badge">@c.Status</span></td>
                    <td>@(c.SettledAmount.HasValue ? "$" + c.SettledAmount.Value.ToString("N2") : "—")</td>
                    <td>
                        <span class="d-inline-block text-truncate" style="max-width:150px;" title="@c.AdminRemarks">
                            @(string.IsNullOrEmpty(c.AdminRemarks) ? "—" : c.AdminRemarks)
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
