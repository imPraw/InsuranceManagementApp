@model IEnumerable<InsuranceManagement.Web.Models.InsurancePolicy>
@{
    ViewData["Title"] = "Insurance Policies";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-earmark-text"></i> @(isAdmin ? "All Insurance Policies" : "My Insurance Policies")</h2>
    <div>
        @if (!isAdmin)
        {
            <a asp-action="Apply" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Apply for Policy
            </a>
        }
        @if (isAdmin)
        {
            <a asp-action="AdminDashboard" class="btn btn-warning">
                <i class="bi bi-clipboard-check"></i> Review Applications
            </a>
            <a asp-action="AllClaims" class="btn btn-info ms-2">
                <i class="bi bi-list-check"></i> Review Claims
            </a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-file-earmark-x" style="font-size: 3rem; color: #ccc;"></i>
        <p class="mt-3 text-muted">No policies found.</p>
        @if (!isAdmin)
        {
            <a asp-action="Apply" class="btn btn-primary mt-2">Apply for Your First Policy</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Policy #</th>
                    @if (isAdmin) { <th>Applicant</th> }
                    <th>Type</th>
                    <th>Coverage</th>
                    <th>Premium/mo</th>
                    <th>Applied</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td><strong>@p.PolicyNumber</strong></td>
                        @if (isAdmin) { <td>@(p.User?.FullName ?? p.User?.Username ?? "â€”")</td> }
                        <td>@p.InsuranceType</td>
                        <td>$@p.CoverageAmount.ToString("N2")</td>
                        <td>$@p.Premium.ToString("N2")</td>
                        <td>@p.ApplicationDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            @{
                                var badgeClass = p.Status switch {
                                    InsuranceManagement.Web.Models.PolicyStatus.Pending => "bg-warning text-dark",
                                    InsuranceManagement.Web.Models.PolicyStatus.Approved => "bg-success",
                                    InsuranceManagement.Web.Models.PolicyStatus.Denied => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@p.Status</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            @if (!isAdmin && p.Status == InsuranceManagement.Web.Models.PolicyStatus.Approved)
                            {
                                <a asp-action="FileClaim" asp-route-id="@p.Id" class="btn btn-sm btn-outline-success ms-1">
                                    <i class="bi bi-clipboard-plus"></i> File Claim
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!isAdmin)
    {
        <div class="mt-3">
            <a asp-action="MyClaims" class="btn btn-outline-secondary">
                <i class="bi bi-list-check"></i> View All My Claims
            </a>
        </div>
    }
}
